@model IEnumerable<Rent_All_Certificate.Models.Branch>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Manage Branches</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="table-responsive">
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BranchName)
        </th>
        <th>

        </th>
        <th>
            Certifications
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BranchName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.BranchID}) |
                @if (item.Certification.Count > 0)
                {
                    <a class="grayLink" href="#">Delete</a>
                }
                else
                {
                    @Html.ActionLink("Delete", "Delete", new {id = item.BranchID}, new {onclick = "return confirm('Are you sure you want to delete?')"})
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Certification.Count)
            </td>
        </tr>
    }
</table>
</div>
